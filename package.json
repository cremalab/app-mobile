{
  "name": "crema-app-mobile",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cremalab/crema-app-mobile.git"
  },
  "scripts": {
    "start": "expo start",
    "start:android": "expo start --android",
    "start:android:ci": "expo android --config=app-storybook.json --non-interactive",
    "start:ios": "expo start --ios",
    "start:ios:ci": "expo ios --config=app-storybook.json --non-interactive",
    "start:web": "expo start --web",
    "start:visual": "run-p start:visual:expo start:visual:storybook",
    "start:visual:expo": "expo start --config=app-storybook.json --no-dev",
    "start:visual:expo:ci": "expo start --config=app-storybook.json --no-dev --minify --non-interactive --localhost",
    "start:visual:storybook": "(adb reverse tcp:7007 tcp:7007 || true) && start-storybook",
    "start:visual:storybook:ci": "(adb reverse tcp:7007 tcp:7007 || true) && start-storybook --ci",
    "start:visual:ci": "run-p start:visual:expo:ci start:visual:storybook:ci",
    "start:types": "tsc --w",
    "start:unit": "npm run test -- --watch",
    "test": "jest",
    "test:ci": "CI=true run-s test:types test:lint test:unit",
    "test:lint": "eslint -c ./.eslintrc.js 'src/**/*.{ts,tsx}'",
    "test:lint:fix": "npm run test:lint -- --fix",
    "test:unit": "npm run test",
    "test:types": "tsc --noEmit",
    "test:visual": "loki test",
    "test:visual:ios": "loki test --targetFilter=ios",
    "test:visual:ios:ci": "run-s start:ios:ci test:visual:ios",
    "test:visual:android": "loki test --targetFilter=android",
    "test:visual:android:ci": "run-s start:android:ci wait ping test:visual:android",
    "test:visual:update": "loki update",
    "test:visual:approve": "loki approve",
    "test:visual:ci": "start-server-and-test start:visual:ci \"http://localhost:7007|http://127.0.0.1:19000|http://127.0.0.1:19001|http://127.0.0.1:19002\" test:visual:android:ci",
    "prepush": "npm run test:ci",
    "postinstall": "patch-package",
    "wait": "sleep 20s",
    "ping": "curl http://127.0.0.1:19001/src/index.tsx.bundle?platform=android&dev=false&minify=false&hot=false"
  },
  "dependencies": {
    "expo": "~36.0.0",
    "react": "~16.9.0",
    "react-dom": "~16.9.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-36.0.0.tar.gz",
    "react-native-screens": "2.0.0-alpha.12",
    "react-native-web": "~0.11.7"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@expo/webpack-config": "^0.11.1",
    "@storybook/addon-actions": "^5.3.11",
    "@storybook/addon-links": "^5.3.11",
    "@storybook/addons": "^5.3.11",
    "@storybook/react-native": "^5.3.11",
    "@storybook/react-native-server": "^5.3.11",
    "@testing-library/react-native": "^5.0.3",
    "@types/jest": "^25.1.0",
    "@types/react": "~16.9.0",
    "@types/react-native": "~0.60.23",
    "@types/react-router-native": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-react-app": "^5.1.0",
    "eslint-plugin-flowtype": "^3.13.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "eslint-plugin-react-native": "^3.8.1",
    "husky": "^4.2.1",
    "husky-add-issue-tracker": "0.0.9",
    "jest-expo": "^36.0.1",
    "loki": "^0.18.1",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.2.0",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.12.0",
    "start-server-and-test": "^1.10.8",
    "typescript": "~3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run prepush",
      "prepare-commit-msg": "husky-add-issue-tracker"
    }
  },
  "loki": {
    "requireReference": true,
    "configurations": {
      "ios": {
        "target": "ios.simulator"
      },
      "android": {
        "target": "android.emulator"
      }
    }
  }
}
